<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviefinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher_search"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_search"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.moviefinder.OneMovieActivity" />
        <activity android:name="com.example.moviefinder.MovieGalleryActivity" />
        <activity android:name="com.example.moviefinder.SearchActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>